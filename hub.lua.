local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local Main = Instance.new("Frame", ScreenGui)
Main.Name = "ZL_Hub"
Main.Size = UDim2.new(0, 220, 0, 220)
Main.Position = UDim2.new(1, -230, 0, 50) -- Aparece arriba a la derecha
Main.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Main.BorderSizePixel = 2
Main.BorderColor3 = Color3.fromRGB(212, 175, 55) -- Borde Dorado

local Title = Instance.new("TextLabel", Main)
Title.Size = UDim2.new(1, 0, 0, 30)
Title.Text = "ZL PVP V0.1"
Title.TextColor3 = Color3.fromRGB(212, 175, 55)
Title.BackgroundColor3 = Color3.fromRGB(30, 30, 30)

-- Función para crear botones rápido
local function createBtn(name, pos, func)
    local b = Instance.new("TextButton", Main)
    b.Size = UDim2.new(0, 100, 0, 35)
    b.Position = pos
    b.Text = name
    b.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    b.TextColor3 = Color3.new(1,1,1)
    b.MouseButton1Click:Connect(func)
end

-- Botones (Funciones básicas que pediste)
createBtn("Speed 100", UDim2.new(0, 5, 0, 40), function() 
    game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 100 
end)

createBtn("Inf Jump", UDim2.new(0, 115, 0, 40), function() 
    _G.IJ = not _G.IJ
    game:GetService("UserInputService").JumpRequest:Connect(function()
        if _G.IJ then game.Players.LocalPlayer.Character:FindFirstChildOfClass('Humanoid'):ChangeState("Jumping") end
    end)
end)

createBtn("ESP", UDim2.new(0, 5, 0, 85), function() print("ESP Activo") end)
createBtn("Reset", UDim2.new(0, 115, 0, 85), function() game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 16 end)
